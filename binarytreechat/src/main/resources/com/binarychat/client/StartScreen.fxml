<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="720.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.binarychat.client.controller.StartScreenController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ImageView fitHeight="150.0" fitWidth="395.0" layoutX="162.0" layoutY="125.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@pictures/Logo2.png" />
    </ImageView>

    <Text fx:id="helloText" layoutX="175.0" layoutY="282.0" text="Welcome to the chat of the future" />

    <Button fx:id="chatRoomButton" layoutX="260.0" layoutY="349.0" mnemonicParsing="false" onAction="#onConnectChatRoom" prefHeight="35.0" prefWidth="200.0" text="Chat Room">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>

    <Button fx:id="singleChatButton" layoutX="260.0" layoutY="400.0" mnemonicParsing="false" onAction="#onConnectSingleChat" prefHeight="35.0" prefWidth="200.0" text="Single Chat">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>

</AnchorPane>
